{
  "manifest_version": 3,
  "name": "poplink",
  "version": "1.0",
  "description": "Create and open sets of URLs with one click.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
